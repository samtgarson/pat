{
  "name": "@samtgarson/pat",
  "version": "0.2.0",
  "license": "MIT",
  "bin": {
    "pat": "bin/pat"
  },
  "description": "Postman on the command line",
  "files": [
    "bin/pat"
  ],
  "keywords": [
    "pat",
    "postman",
    "cli",
    "http",
    "client"
  ],
  "scripts": {
    "dev": "tsc --watch -p ./tsconfig.build.json",
    "build": "rm -rf bat && NODE_ENV=production rollup -c",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx ."
  },
  "dependencies": {
    "axios": "^0.19.1",
    "chalk": "^3.0.0",
    "commander": "^5.0.0-1",
    "conf": "^6.2.0",
    "execa": "^4.0.0",
    "figures": "^3.1.0",
    "inflection": "^1.12.0",
    "ink": "^2.6.0",
    "ink-box": "^1.0.0",
    "ink-confirm-input": "^2.0.0",
    "ink-select-input": "^3.1.2",
    "ink-spinner": "^3.0.1",
    "ink-text-input": "^3.2.2",
    "mime-types": "^2.1.26",
    "quick-score": "0.0.5",
    "react": "^16.12.0",
    "react-error-boundary": "^1.2.5",
    "tslib": "^1.11.1",
    "unstated-next": "^1.1.0",
    "use-force-update": "^1.0.7"
  },
  "devDependencies": {
    "@robmarr/rollup-plugin-shebang": "^1.0.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^3.0.0",
    "@samtgarson/eslint-config": "^2.1.0",
    "@types/inflection": "^1.5.28",
    "@types/jest": "^24.0.25",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@types/rollup-plugin-json": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "@yelo/rollup-node-external": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "ink-testing-library": "^1.0.3",
    "jest": "^24.9.0",
    "jest-mock-axios": "^3.2.0",
    "rollup": "^2.2.0",
    "rollup-plugin-executable": "^1.5.2",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript-paths": "^1.2.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/$1"
    },
    "testPathIgnorePatterns": [
      "dist"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "promise"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "@samtgarson/eslint-config"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/member-delimiter-style": [
        2,
        {
          "multiline": {
            "delimiter": "none"
          },
          "singleline": {
            "delimiter": "comma"
          }
        }
      ],
      "promise/prefer-await-to-then": 1,
      "react/prop-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/ban-ts-ignore": 0
    }
  }
}
