{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["dist", "./*.d.ts"],
  "include": ["src", "test"]
}
