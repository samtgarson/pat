{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["es2020.string"],
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["node_modules/@types", "types/stubs"]
  },
  "exclude": ["bin"],
  "include": ["src", "test", "types"]
}
